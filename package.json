{
  "name": "tiny-fp",
  "version": "1.0.0",
  "description": "A compact, practical functional programming toolkit for TypeScript",
  "main": "dist/allTS.js",
  "types": "dist/allTS.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc run-examples-simple.ts --outDir dist --target ES2020 --module CommonJS",
    "typecheck": "tsc --noEmit",
    "examples": "node dist/run-examples-simple.js",
    "test": "vitest",
    "test:laws": "vitest test/laws",
    "test:ci": "vitest run test/laws --reporter=verbose",
    "test:nightly": "vitest run test/laws --reporter=verbose --run",
    "test:ui": "vitest --ui",
    "test:new": "vitest test/sum-product.spec.ts test/two-cat.registry-and-laws.spec.ts test/two-cat.traversable-laws.spec.ts test/comonad.pair.coalgebra.spec.ts --run",
    "coverage": "node test/laws/coverage-matrix.js",
    "coverage:ci": "node test/laws/coverage-matrix.js && npm run test:ci",
    "precommit": "node scripts/derived-law-lint.mjs && npm run typecheck && npm run test:new",
    "upgrade:analyze": "node pdi/upgrade-analyzer.js analyze",
    "upgrade:backlog": "node pdi/upgrade-analyzer.js backlog",
    "upgrade:stats": "node pdi/upgrade-analyzer.js stats",
    "upgrade:reference": "node pdi/upgrade-analyzer.js reference",
    "maintenance:check": "node pdi/maintenance-reminder.js check",
    "maintenance:remind": "node pdi/maintenance-reminder.js remind",
    "tasks:check": "node pdi/task-scheduler.js check",
    "tasks:list": "node pdi/task-scheduler.js list",
    "tasks:increment": "node pdi/task-scheduler.js increment",
    "docs:check": "node pdi/docs-checker.js check",
    "docs:stale": "node pdi/docs-checker.js stale",
    "docs:update": "node pdi/docs-checker.js update",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "laws": "tsx laws.monoidal.ts"
  },
  "keywords": [
    "functional-programming",
    "typescript",
    "fp",
    "monads",
    "option",
    "result",
    "recursion-schemes"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/utils": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.0.0",
    "fast-check": "^4.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
